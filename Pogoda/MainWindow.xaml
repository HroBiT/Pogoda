<Window x:Class="pogoda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        Title="Sprawdz pogode" Height="450" Width="800">
    <Grid>
        <m:Map x:Name="MyMap" MouseDoubleClick="doubleClick" Height="324" VerticalAlignment="Top" Margin="0,110,0,0" />
        <Label x:Name="WeatherInfoLabel" Content="Informacje o pogodzie..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="FutureWeatherInfoLabel" Content="Prognoza pogody za 3 godziny..." HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SearchButton" Content="Szukaj" HorizontalAlignment="Left" Margin="140,70,0,0" VerticalAlignment="Top" Click="SearchButton_Click"/>
    </Grid>
</Window>
